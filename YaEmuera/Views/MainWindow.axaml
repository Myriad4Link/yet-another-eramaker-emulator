<Window xmlns="https://github.com/avaloniaui"        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        xmlns:app="using:YaEmuera"        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"        x:Class="YaEmuera.Views.MainWindow"        x:DataType="app:Composition"        Icon="/Assets/avalonia-logo.ico"        Title="yaEmuera"        DataContext="{StaticResource Composition}">    <Design.DataContext>        <!-- 这里我有意见😡 -->        <!-- 因为DI是发生在运行时的，所以在预览阶段Preview是没法被注入的。 -->        <!-- 所以要不就放弃Preview，要不就花点功夫写Mock类。 -->        <!-- 两种都很烦人啊但是😡😡😡 -->        <app:Composition />        <!-- _____ -->        <!-- |　D | -->        <!-- |　I |_________ -->        <!-- | 缠 |   预    | -->        <!-- | 运 |   览　  | -->        <!-- | 行 |　 未    | -->        <!-- ‾‾‾‾|　 至    |____ -->        <!--     |  MOCK  | 弃 | -->        <!--     |　 先    | 留 | -->        <!--     |　 迎    | 皆 | -->        <!--     ‾‾‾‾‾‾‾‾‾| 叹 |      | -->        <!--              | 声 |      | -->        <!--              ‾‾‾‾‾       | -->        <!--                         最 -->        <!--                         神 -->        <!--                         笔 -->    </Design.DataContext>    <Window.Resources>        <SolidColorBrush x:Key="TextBoxForeground" Color="{Binding MainWindowViewModel.TextBoxForegroundColorProperty}" />        <SolidColorBrush x:Key="TextBoxBackground" Color="{Binding MainWindowViewModel.TextBoxBackgroundColorProperty}" />        <SolidColorBrush x:Key="TextBoxBorderBrushBackground"                         Color="{Binding MainWindowViewModel.TextBoxBorderBackgroundColorProperty}" />    </Window.Resources>    <!-- 也是很神必的Styles了 -->    <Window.Styles>        <Style Selector="TextBox">            <Setter Property="Background" Value="{DynamicResource TextBoxBackground}" />            <Setter Property="Foreground" Value="{DynamicResource TextBoxForeground}" />            <Setter Property="IsReadOnly" Value="True" />            <Setter Property="Focusable" Value="False" />            <Setter Property="CornerRadius" Value="0" />            <Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderBrushBackground}" />            <Style Selector="^:pointerover">                <Setter Property="Foreground" Value="{DynamicResource TextBoxForeground}" />                <Style Selector="^ /template/ Border#PART_BorderElement">                    <Setter Property="Background" Value="{DynamicResource TextBoxBorderBrushBackground}" />                    <Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderBrushBackground}" />                </Style>                <Style Selector="^ /template/ DockPanel">                    <Setter Property="Background" Value="{DynamicResource TextBoxBackground}" />                </Style>            </Style>        </Style>        <Style Selector="Menu">            <Setter Property="Padding" Value="0" />        </Style>        <Style Selector="MenuItem">            <Setter Property="Height" Value="{Binding MainWindowViewModel.MenuItemHeight}" />            <Setter Property="HorizontalAlignment" Value="Left" />            <Setter Property="VerticalAlignment" Value="Center" />            <Setter Property="Padding" Value="5, 2, 5, 2" />            <Setter Property="Margin" Value="5, 2, 5, 2" />            <Style Selector="^.secondary-items">                <Setter Property="Width" Value="{Binding MainWindowViewModel.SecondaryMenuItemWidth}"></Setter>            </Style>        </Style>        <Style Selector="Separator">            <Setter Property="Background" Value="Black" />        </Style>    </Window.Styles>    <DockPanel>        <Grid DockPanel.Dock="Top" ColumnDefinitions="*,Auto">            <Menu Grid.Column="0" Margin="0,0,5,0">                <MenuItem Header="Files(_F)">                    <MenuItem Classes="secondary-items" Header="Restart(_R)" />                    <MenuItem Classes="secondary-items" Header="Restart with Debug Mode(_D)" />                    <Separator />                    <MenuItem Classes="secondary-items" Header="Save Log(_S)..." InputGesture="Ctrl + S" />                </MenuItem>                <MenuItem Header="Help(_H)">                    <MenuItem Classes="secondary-items" Header="Settings..." />                </MenuItem>            </Menu>            <TextBlock Grid.Column="1" HorizontalAlignment="Right" Text="yaEmuera α" VerticalAlignment="Center"                       Margin="0,0,5,0" />        </Grid>        <TextBox>            你好        </TextBox>    </DockPanel></Window>